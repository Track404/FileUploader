<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Welcome <%= locals.username %></h1>
    <% if (locals.folders) {%>
    <h2>Folders</h2>
    <ul>
      <% folders.forEach(function(folder) { %>
      <li>Name: <%= folder.name %></li>
      <a href="/file/<%= folder.id %>/readfolder">Open</a>
      <a href="/file/<%= folder.id %>/updatefolder">Update</a>
      <form
        action="/file/<%= folder.id %>/deletefolder"
        method="POST"
        style="display: inline"
      >
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this user?');"
        >
          Delete
        </button>
      </form>
      <% }); %>
    </ul>

    <% } %>
    <a href="/file/addfolder">Add a Folder</a>
  </body>
</html>
