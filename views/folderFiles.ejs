<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Folder <%= locals.folder.name %></h1>
    <% if (locals.folder) {%>
    <h2>Files</h2>
    <ul>
      <% folder.files.forEach(function(folder) { %>
      <li>Name: <%= folder.filename %></li>

      <% }); %>
    </ul>

    <% } %>
    <a href="/file/<%= folder.id %>/addfile">Add a File</a>
    <a href="/file">Go Back</a>
  </body>
</html>
